BACKEND_PORT=4000
DATABASE_URL=postgresql://enabion:password@localhost:5432/enabion

# Blobstore (R1.0)
BLOBSTORE_DRIVER=local
BLOBSTORE_LOCAL_ROOT=./tmp/blobstore
# Base64-encoded 32-byte key; required for L2 encryption
BLOB_ENC_MASTER_KEY=
BLOB_ENC_KEY_ID=master-v1
BLOBSTORE_MAX_UPLOAD_MB=25
BLOBSTORE_ALLOWED_CONTENT_TYPES=application/octet-stream,application/pdf,text/plain,text/markdown,image/png,image/jpeg
BLOBSTORE_SIGNED_URL_TTL_SECONDS=300

# Auth (R1.0)
AUTH_COOKIE_NAME=enabion_session
AUTH_COOKIE_DOMAIN=
AUTH_COOKIE_SECURE=false
AUTH_SESSION_TTL_HOURS=12
AUTH_LOGIN_MAX_ATTEMPTS=5
AUTH_LOGIN_WINDOW_MINUTES=10
AUTH_RESET_TTL_MINUTES=30
AUTH_RESET_DEBUG=false
# Platform admin (R1.0)
PLATFORM_ADMIN_EMAIL_ALLOWLIST=

# App URLs
APP_PUBLIC_URL=

# Email (SMTP)
SMTP_HOST=smtp-relay
SMTP_PORT=25
SMTP_SECURE=false
SMTP_TLS_REJECT_UNAUTHORIZED=true
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@example.com

# AI Gateway (R1.0)
OPENAI_API_KEY=
OPENAI_ORG_ID=
OPENAI_PROJECT_ID=
AI_GATEWAY_DEFAULT_MODEL=gpt-4o-mini
AI_GATEWAY_ALLOWED_MODELS=gpt-4o-mini
AI_GATEWAY_MAX_OUTPUT_TOKENS=1024
AI_GATEWAY_MAX_INPUT_CHARS=12000
AI_GATEWAY_TIMEOUT_MS=15000
AI_GATEWAY_DEFAULT_TEMPERATURE=0.4
AI_GATEWAY_RL_TENANT_RPM=60
AI_GATEWAY_RL_USER_RPM=30
AI_GATEWAY_RL_USECASE_RPM=
AI_GATEWAY_RL_BACKEND=postgres
AI_GATEWAY_RL_CLEANUP_INTERVAL_MS=3600000
AI_GATEWAY_RL_RETENTION_HOURS=24

# Logging
LOG_LEVEL=info
LOG_PRETTY=false

# Optional S3
S3_ENDPOINT=
S3_REGION=
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
