{
  "name": "enabion-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Enabion R1.0 backend skeleton (NestJS + Prisma)",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "lint": "eslint . --ext .ts",
    "test": "npm run test:blobstore && npm run test:attachments && npm run test:rbac && npm run test:contracts && npm run test:event-tenant-guard && npm run test:auth-reset-email && npm run test:tenant && npm run test:intents && npm run test:adminpanel && npm run test:platform-admin && npm run test:nda-leak && npm run test:api",
    "test:blobstore": "ts-node --project tsconfig.json scripts/blobstore.test.ts",
    "test:attachments": "ts-node --project tsconfig.json scripts/attachment-integration.test.ts",
    "test:rbac": "ts-node --project tsconfig.json scripts/rbac-smoke.test.ts",
    "test:contracts": "ts-node --project tsconfig.json scripts/event-contract.test.ts",
    "test:event-tenant-guard": "ts-node --project tsconfig.json scripts/event-tenant-guard.test.ts",
    "test:auth-reset-email": "ts-node --project tsconfig.json scripts/auth-reset-email.test.ts",
    "test:tenant": "ts-node --project tsconfig.json scripts/tenant-isolation.test.ts",
    "test:intents": "ts-node --project tsconfig.json scripts/intent-manual-create.test.ts",
    "test:adminpanel": "ts-node --project tsconfig.json scripts/adminpanel-tenant-isolation.test.ts && ts-node --project tsconfig.json scripts/adminpanel-rbac.test.ts",
    "test:platform-admin": "ts-node --project tsconfig.json scripts/platform-admin-access.test.ts",
    "test:nda-leak": "ts-node --project tsconfig.json scripts/nda-leak.test.ts",
    "test:api": "ts-node --project tsconfig.json scripts/event-api.test.ts",
    "test:s3": "ts-node --project tsconfig.json scripts/s3-smoke.test.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.953.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.6.0",
    "nodemailer": "^6.9.11",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "ulid": "^2.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.56.0",
    "prisma": "^5.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
