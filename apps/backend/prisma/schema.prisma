generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  users     User[]
  events    Event[]
  blobs     Blob[]
  attachments Attachment[]
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  orgId     String
  email     String   @unique
  role      String
  passwordHash     String?
  passwordUpdatedAt DateTime?
  lastLoginAt      DateTime?
  org       Organization @relation(fields: [orgId], references: [id])
  sessions  Session[]
  passwordResetTokens PasswordResetToken[]
  createdAt DateTime @default(now())
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  revokedAt DateTime?
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  usedAt    DateTime?
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}

enum ConfidentialityLevel {
  L1
  L2
  L3
}

enum BlobStorageDriver {
  local
  s3
}

enum AttachmentSource {
  email_ingest
  manual_upload
  export
}

model Event {
  id             String   @id
  schemaVersion  Int
  type           String
  occurredAt     DateTime
  recordedAt     DateTime @default(now())
  orgId          String
  actorUserId    String?
  actorOrgId     String?
  subjectType    String
  subjectId      String
  lifecycleStep  String   @default("CLARIFY")
  pipelineStage  String   @default("NEW")
  channel        String
  correlationId  String
  payload        Json

  org Organization @relation(fields: [orgId], references: [id])

  @@index([orgId, subjectId, type, occurredAt])
  @@index([correlationId])
  @@index([occurredAt])
}

model Blob {
  id               String                @id @default(uuid())
  orgId            String
  storageDriver    BlobStorageDriver     @default(local)
  objectKey        String
  sizeBytes        Int
  sha256           String                @db.Char(64)
  contentType      String
  confidentiality  ConfidentialityLevel  @default(L1)
  encrypted        Boolean               @default(false)
  encryptionAlg    String?
  encryptionKeyId  String?
  encryptionIvB64  String?
  encryptionTagB64 String?
  createdAt        DateTime              @default(now())
  attachments      Attachment[]
  org              Organization          @relation(fields: [orgId], references: [id])

  @@index([orgId])
  @@index([orgId, objectKey])
}

model Attachment {
  id              String             @id @default(uuid())
  orgId           String
  intentId        String?
  source          AttachmentSource   @default(manual_upload)
  filename        String
  blobId          String
  createdByUserId String?
  createdAt       DateTime           @default(now())
  blob            Blob               @relation(fields: [blobId], references: [id])
  org             Organization       @relation(fields: [orgId], references: [id])

  @@index([orgId])
  @@index([intentId])
}
