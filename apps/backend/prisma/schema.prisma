generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  status    OrganizationStatus @default(ACTIVE)
  defaultLanguage String @default("EN")
  policyAiEnabled Boolean @default(true)
  policyShareLinksEnabled Boolean @default(false)
  policyEmailIngestEnabled Boolean @default(false)
  users     User[]
  intents   Intent[]
  events    Event[]
  avatarSuggestions AvatarSuggestion[]
  blobs     Blob[]
  attachments Attachment[]
  ndaAcceptances NdaAcceptance[]
  shareLinks IntentShareLink[]
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  orgId     String
  email     String   @unique
  role      String
  deactivatedAt DateTime?
  passwordHash     String?
  passwordUpdatedAt DateTime?
  lastLoginAt      DateTime?
  org       Organization @relation(fields: [orgId], references: [id])
  sessions  Session[]
  passwordResetTokens PasswordResetToken[]
  createdIntents Intent[] @relation("IntentCreatedBy")
  ownedIntents Intent[] @relation("IntentOwner")
  ndaAcceptances NdaAcceptance[] @relation("NdaAcceptanceByUser")
  createdShareLinks IntentShareLink[] @relation("ShareLinkCreatedBy")
  revokedShareLinks IntentShareLink[] @relation("ShareLinkRevokedBy")
  createdAt DateTime @default(now())
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  revokedAt DateTime?
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  usedAt    DateTime?
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}

enum ConfidentialityLevel {
  L1
  L2
  L3
}

enum OrganizationStatus {
  ACTIVE
  SUSPENDED
}

enum BlobStorageDriver {
  local
  s3
}

enum AttachmentSource {
  email_ingest
  manual_upload
  export
}

enum NdaType {
  MUTUAL
}

enum NdaChannel {
  ui
  api
}

enum IntentStage {
  NEW
  CLARIFY
  MATCH
  COMMIT
  WON
  LOST
}

enum IntentSource {
  manual
  paste
  email
}

enum AvatarType {
  SYSTEM
  ORG_X
  INTENT_COACH
}

enum AvatarSuggestionKind {
  missing_info
  question
  risk
  rewrite
  summary
}

enum AvatarSuggestionStatus {
  ISSUED
  ACCEPTED
  REJECTED
}

model Event {
  id             String   @id
  schemaVersion  Int
  type           String
  occurredAt     DateTime
  recordedAt     DateTime @default(now())
  orgId          String
  actorUserId    String?
  actorOrgId     String?
  subjectType    String
  subjectId      String
  lifecycleStep  String   @default("CLARIFY")
  pipelineStage  String   @default("NEW")
  channel        String
  correlationId  String
  payload        Json

  org Organization @relation(fields: [orgId], references: [id])

  @@index([orgId, subjectId, type, occurredAt])
  @@index([correlationId])
  @@index([occurredAt])
}

model AiRateLimitWindow {
  id          String   @id @default(cuid())
  key         String
  windowStart DateTime
  count       Int
  updatedAt   DateTime @updatedAt

  @@unique([key, windowStart])
  @@index([windowStart])
}

model AvatarSuggestion {
  id             String                 @id @default(uuid())
  orgId          String
  intentId       String
  avatarType     AvatarType
  kind           AvatarSuggestionKind
  title          String
  l1Text         String?
  evidenceRef    String?
  proposedPatch  Json?
  status         AvatarSuggestionStatus @default(ISSUED)
  createdAt      DateTime               @default(now())
  decidedAt      DateTime?
  decidedByUserId String?

  org    Organization @relation(fields: [orgId], references: [id])
  intent Intent       @relation(fields: [intentId], references: [id])

  @@index([orgId, intentId, createdAt])
  @@index([intentId, status])
  @@index([orgId, status])
}

model Blob {
  id               String                @id @default(uuid())
  orgId            String
  storageDriver    BlobStorageDriver     @default(local)
  objectKey        String
  sizeBytes        Int
  sha256           String                @db.Char(64)
  contentType      String
  confidentiality  ConfidentialityLevel  @default(L1)
  encrypted        Boolean               @default(false)
  encryptionAlg    String?
  encryptionKeyId  String?
  encryptionIvB64  String?
  encryptionTagB64 String?
  createdAt        DateTime              @default(now())
  attachments      Attachment[]
  org              Organization          @relation(fields: [orgId], references: [id])

  @@index([orgId])
  @@index([orgId, objectKey])
}

model Attachment {
  id              String             @id @default(uuid())
  orgId           String
  intentId        String?
  source          AttachmentSource   @default(manual_upload)
  filename        String
  blobId          String
  createdByUserId String?
  createdAt       DateTime           @default(now())
  blob            Blob               @relation(fields: [blobId], references: [id])
  org             Organization       @relation(fields: [orgId], references: [id])

  @@index([orgId])
  @@index([intentId])
  @@index([orgId, intentId, createdAt])
}

model NdaDocument {
  id            String   @id @default(cuid())
  ndaType       NdaType  @default(MUTUAL)
  ndaVersion    String   @unique
  enMarkdown    String
  summaryPl     String?
  summaryDe     String?
  summaryNl     String?
  enHashSha256  String   @db.Char(64)
  isActive      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([ndaType, isActive])
}

model NdaAcceptance {
  id                String     @id @default(cuid())
  orgId             String
  counterpartyOrgId String?
  ndaType           NdaType    @default(MUTUAL)
  ndaVersion        String
  enHashSha256      String     @db.Char(64)
  acceptedByUserId  String
  acceptedAt        DateTime
  language          String
  channel           NdaChannel
  typedName         String
  typedRole         String
  createdAt         DateTime   @default(now())

  org Organization @relation(fields: [orgId], references: [id])
  acceptedByUser User @relation("NdaAcceptanceByUser", fields: [acceptedByUserId], references: [id])

  @@unique([orgId, counterpartyOrgId, ndaType, ndaVersion, enHashSha256])
  @@index([acceptedByUserId, acceptedAt])
  @@index([orgId, ndaType, ndaVersion, enHashSha256])
}

model Intent {
  id                   String               @id @default(cuid())
  intentNumber         Int                  @unique @default(autoincrement())
  intentName           String
  orgId                String
  createdByUserId      String
  ownerUserId          String?
  goal                 String
  title                String?
  client               String?
  language             String               @default("EN")
  context              String?
  scope                String?
  kpi                  String?
  risks                String?
  deadlineAt           DateTime?
  stage                IntentStage          @default(NEW)
  confidentialityLevel ConfidentialityLevel @default(L1)
  source               IntentSource         @default(manual)
  sourceTextRaw         String?
  sourceTextSha256      String?              @db.Char(64)
  sourceTextLength      Int?
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  lastActivityAt       DateTime             @default(now())

  org            Organization @relation(fields: [orgId], references: [id])
  createdByUser  User         @relation("IntentCreatedBy", fields: [createdByUserId], references: [id])
  owner          User?        @relation("IntentOwner", fields: [ownerUserId], references: [id])
  shareLinks     IntentShareLink[]
  avatarSuggestions AvatarSuggestion[]

  @@index([orgId])
  @@index([orgId, stage])
  @@index([orgId, lastActivityAt])
  @@index([orgId, ownerUserId])
  @@index([orgId, language])
  @@index([orgId, stage, lastActivityAt])
  @@index([createdByUserId])
  @@unique([orgId, intentName])
}

model IntentShareLink {
  id              String   @id @default(cuid())
  orgId           String
  intentId        String
  createdByUserId String
  tokenHashSha256 String   @db.Char(64)
  createdAt       DateTime @default(now())
  expiresAt       DateTime
  revokedAt       DateTime?
  revokedByUserId String?
  lastAccessAt    DateTime?
  accessCount     Int      @default(0)

  org      Organization @relation(fields: [orgId], references: [id])
  intent   Intent       @relation(fields: [intentId], references: [id])
  createdBy User        @relation("ShareLinkCreatedBy", fields: [createdByUserId], references: [id])
  revokedBy User?       @relation("ShareLinkRevokedBy", fields: [revokedByUserId], references: [id])

  @@index([orgId, intentId])
  @@unique([tokenHashSha256])
  @@index([expiresAt])
  @@index([revokedAt])
}

model ThemePalette {
  id              String   @id @default(cuid())
  slug            String   @unique
  name            String
  tokensJson      Json
  isGlobalDefault Boolean  @default(false)
  createdByUserId String?
  updatedByUserId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  revisions       ThemePaletteRevision[]
}

model ThemePaletteRevision {
  id              String   @id @default(cuid())
  paletteId       String
  revision        Int
  tokensJson      Json
  createdByUserId String?
  createdAt       DateTime @default(now())

  palette ThemePalette @relation(fields: [paletteId], references: [id])

  @@unique([paletteId, revision])
  @@index([paletteId, createdAt])
}
