generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  users     User[]
  events    Event[]
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  orgId     String
  email     String   @unique
  role      String
  org       Organization @relation(fields: [orgId], references: [id])
  createdAt DateTime @default(now())
}

model Event {
  id             String   @id
  schemaVersion  Int
  type           String
  occurredAt     DateTime
  recordedAt     DateTime @default(now())
  orgId          String
  actorUserId    String?
  actorOrgId     String?
  subjectType    String
  subjectId      String
  lifecycleStep  String?
  pipelineStage  String?
  channel        String
  correlationId  String
  payload        Json

  org Organization @relation(fields: [orgId], references: [id])

  @@index([orgId, subjectId, type, occurredAt])
}
