generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  status    OrganizationStatus @default(ACTIVE)
  defaultLanguage String @default("EN")
  policyAiEnabled Boolean @default(true)
  policyShareLinksEnabled Boolean @default(false)
  policyEmailIngestEnabled Boolean @default(false)
  providerLanguages String[] @default([])
  providerRegions   String[] @default([])
  providerTags      String[] @default([])
  providerBudgetBucket ProviderBudgetBucket @default(UNKNOWN)
  providerTeamSizeBucket ProviderTeamSizeBucket @default(UNKNOWN)
  users     User[]
  intents   Intent[]
  events    Event[]
  coachRuns IntentCoachRun[]
  avatarSuggestions AvatarSuggestion[]
  avatarSuggestionFeedbacks AvatarSuggestionFeedback[]
  userOnboardingStates UserOnboardingState[]
  orgAvatarProfile OrgAvatarProfile?
  orgLeadQualifications OrgLeadQualification[]
  blobs     Blob[]
  attachments Attachment[]
  ndaAcceptances NdaAcceptance[]
  shareLinks IntentShareLink[]
  intentRecipientsSent IntentRecipient[] @relation("IntentRecipientSenderOrg")
  intentRecipientsReceived IntentRecipient[] @relation("IntentRecipientRecipientOrg")
  matchLists MatchList[]
  matchFeedbacks MatchFeedback[]
  matchFeedbackCandidates MatchFeedback[] @relation("MatchFeedbackCandidateOrg")
  trustScoreLatestId String? @unique
  trustScoreLatest TrustScoreSnapshot? @relation("TrustScoreLatest", fields: [trustScoreLatestId], references: [id])
  trustScoreSnapshots TrustScoreSnapshot[] @relation("TrustScoreOrg")
  trustScoreSubjectSnapshots TrustScoreSnapshot[] @relation("TrustScoreSubjectOrg")
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  orgId     String
  email     String   @unique
  role      String
  deactivatedAt DateTime?
  passwordHash     String?
  passwordUpdatedAt DateTime?
  lastLoginAt      DateTime?
  org       Organization @relation(fields: [orgId], references: [id])
  sessions  Session[]
  passwordResetTokens PasswordResetToken[]
  createdIntents Intent[] @relation("IntentCreatedBy")
  ownedIntents Intent[] @relation("IntentOwner")
  ndaAcceptances NdaAcceptance[] @relation("NdaAcceptanceByUser")
  createdShareLinks IntentShareLink[] @relation("ShareLinkCreatedBy")
  revokedShareLinks IntentShareLink[] @relation("ShareLinkRevokedBy")
  aiAccessIntents Intent[] @relation("IntentAiAllowL2SetBy")
  avatarSuggestionFeedbacks AvatarSuggestionFeedback[]
  onboardingStates UserOnboardingState[]
  createdOrgAvatarProfiles OrgAvatarProfile[] @relation("OrgAvatarProfileCreatedBy")
  updatedOrgAvatarProfiles OrgAvatarProfile[] @relation("OrgAvatarProfileUpdatedBy")
  createdOrgLeadQualifications OrgLeadQualification[] @relation("OrgLeadQualificationCreatedBy")
  updatedOrgLeadQualifications OrgLeadQualification[] @relation("OrgLeadQualificationUpdatedBy")
  createdMatchLists MatchList[] @relation("MatchListCreatedBy")
  matchFeedbacks MatchFeedback[] @relation("MatchFeedbackActor")
  trustScoreSnapshots TrustScoreSnapshot[] @relation("TrustScoreActor")
  requestedIntentRecipients IntentRecipient[] @relation("IntentRecipientNdaRequestedBy")
  createdAt DateTime @default(now())
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  revokedAt DateTime?
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  usedAt    DateTime?
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}

enum ConfidentialityLevel {
  L1
  L2
  L3
}

enum OrganizationStatus {
  ACTIVE
  SUSPENDED
}

enum ProviderBudgetBucket {
  UNKNOWN
  LT_10K
  EUR_10K_50K
  EUR_50K_150K
  EUR_150K_500K
  GT_500K
}

enum ProviderTeamSizeBucket {
  UNKNOWN
  SOLO
  TEAM_2_10
  TEAM_11_50
  TEAM_51_200
  TEAM_201_PLUS
}

enum BlobStorageDriver {
  local
  s3
}

enum AttachmentSource {
  email_ingest
  manual_upload
  export
}

enum NdaType {
  MUTUAL
}

enum NdaChannel {
  ui
  api
}

enum IntentStage {
  NEW
  CLARIFY
  MATCH
  COMMIT
  WON
  LOST
}

enum IntentSource {
  manual
  paste
  email
}

enum IntentRecipientRole {
  Y
  Z
}

enum IntentRecipientStatus {
  SENT
  ACCEPTED
  REVOKED
}

enum AvatarType {
  SYSTEM
  ORG_X
  INTENT_COACH
}

enum AvatarSuggestionSubjectType {
  INTENT
  USER
  ORG
}

enum AvatarSuggestionKind {
  missing_info
  question
  risk
  rewrite
  summary
  lead_qualification
  next_step
}

enum AvatarSuggestionStatus {
  ISSUED
  ACCEPTED
  REJECTED
}

enum AvatarSuggestionDecision {
  ACCEPTED
  REJECTED
}

enum AvatarSuggestionFeedbackSentiment {
  UP
  DOWN
  NEUTRAL
}

enum AvatarSuggestionFeedbackReasonCode {
  HELPFUL_STRUCTURING
  TOO_GENERIC
  INCORRECT_ASSUMPTION
  MISSING_CONTEXT
  NOT_RELEVANT
  ALREADY_KNOWN
  OTHER
}

enum MatchFeedbackRating {
  UP
  DOWN
}

enum MatchFeedbackAction {
  SHORTLIST
  HIDE
  NOT_RELEVANT
}

enum LeadFitBand {
  HIGH
  MEDIUM
  LOW
  NO_FIT
}

enum LeadPriority {
  P1
  P2
  P3
}

enum TrustScoreScope {
  GLOBAL
}

model Event {
  id             String   @id
  schemaVersion  Int
  type           String
  occurredAt     DateTime
  recordedAt     DateTime @default(now())
  orgId          String
  actorUserId    String?
  actorOrgId     String?
  subjectType    String
  subjectId      String
  lifecycleStep  String   @default("CLARIFY")
  pipelineStage  String   @default("NEW")
  channel        String
  correlationId  String
  payload        Json

  org Organization @relation(fields: [orgId], references: [id])

  @@index([orgId, subjectId, type, occurredAt])
  @@index([correlationId])
  @@index([occurredAt])
}

model TrustScoreSnapshot {
  id                 String          @id @default(cuid())
  orgId              String
  subjectOrgId       String
  scope              TrustScoreScope @default(GLOBAL)
  scoreOverall       Int
  scoreProfile       Int?
  scoreResponsiveness Int?
  scoreBehaviour     Int?
  statusLabel        String
  explanationPublic  Json?
  explanationInternal Json?
  triggerReason      String?
  actorUserId        String?
  algorithmVersion   String
  computedAt         DateTime
  createdAt          DateTime @default(now())

  org        Organization @relation("TrustScoreOrg", fields: [orgId], references: [id])
  subjectOrg Organization @relation("TrustScoreSubjectOrg", fields: [subjectOrgId], references: [id])
  actorUser  User?        @relation("TrustScoreActor", fields: [actorUserId], references: [id])
  latestFor  Organization? @relation("TrustScoreLatest")

  @@index([orgId, computedAt])
  @@index([subjectOrgId, computedAt])
  @@index([orgId, subjectOrgId, computedAt])
}

model AiRateLimitWindow {
  id          String   @id @default(cuid())
  key         String
  windowStart DateTime
  count       Int
  updatedAt   DateTime @updatedAt

  @@unique([key, windowStart])
  @@index([windowStart])
}

model IntentCoachRun {
  id              String   @id @default(uuid())
  orgId           String
  intentId        String
  createdByUserId String?
  summaryItems    Json
  instructions    String?
  focusFields     Json?
  createdAt       DateTime @default(now())

  org    Organization @relation(fields: [orgId], references: [id])
  intent Intent       @relation(fields: [intentId], references: [id])
  suggestions AvatarSuggestion[]

  @@index([orgId, intentId, createdAt])
  @@index([intentId, createdAt])
}

model AvatarSuggestion {
  id             String                 @id @default(uuid())
  orgId          String
  intentId       String?
  coachRunId     String?
  avatarType     AvatarType
  kind           AvatarSuggestionKind
  subjectType    AvatarSuggestionSubjectType? @default(INTENT)
  subjectId      String?
  targetField    String?
  title          String
  l1Text         String?
  evidenceRef    String?
  proposedPatch  Json?
  ctas           Json?
  metadata       Json?
  language       String?
  status         AvatarSuggestionStatus @default(ISSUED)
  actionable     Boolean                @default(true)
  createdAt      DateTime               @default(now())
  decidedAt      DateTime?
  decidedByUserId String?

  org    Organization @relation(fields: [orgId], references: [id])
  intent Intent?      @relation(fields: [intentId], references: [id])
  coachRun IntentCoachRun? @relation(fields: [coachRunId], references: [id])
  feedback AvatarSuggestionFeedback[]

  @@index([orgId, intentId, createdAt])
  @@index([orgId, subjectType, subjectId, createdAt])
  @@index([intentId, status])
  @@index([orgId, status])
}

model AvatarSuggestionFeedback {
  id           String                             @id @default(uuid())
  orgId        String
  intentId     String
  suggestionId String
  userId       String?
  decision     AvatarSuggestionDecision
  rating       Int?
  sentiment    AvatarSuggestionFeedbackSentiment?
  reasonCode   AvatarSuggestionFeedbackReasonCode?
  commentL1    String?
  createdAt    DateTime                           @default(now())

  org        Organization   @relation(fields: [orgId], references: [id])
  intent     Intent         @relation(fields: [intentId], references: [id])
  suggestion AvatarSuggestion @relation(fields: [suggestionId], references: [id])
  user       User?          @relation(fields: [userId], references: [id])

  @@index([orgId, intentId, createdAt])
  @@index([suggestionId, createdAt])
}

model Blob {
  id               String                @id @default(uuid())
  orgId            String
  storageDriver    BlobStorageDriver     @default(local)
  objectKey        String
  sizeBytes        Int
  sha256           String                @db.Char(64)
  contentType      String
  confidentiality  ConfidentialityLevel  @default(L1)
  encrypted        Boolean               @default(false)
  encryptionAlg    String?
  encryptionKeyId  String?
  encryptionIvB64  String?
  encryptionTagB64 String?
  createdAt        DateTime              @default(now())
  attachments      Attachment[]
  org              Organization          @relation(fields: [orgId], references: [id])

  @@index([orgId])
  @@index([orgId, objectKey])
}

model Attachment {
  id              String             @id @default(uuid())
  orgId           String
  intentId        String?
  source          AttachmentSource   @default(manual_upload)
  filename        String
  blobId          String
  createdByUserId String?
  createdAt       DateTime           @default(now())
  blob            Blob               @relation(fields: [blobId], references: [id])
  org             Organization       @relation(fields: [orgId], references: [id])

  @@index([orgId])
  @@index([intentId])
  @@index([orgId, intentId, createdAt])
}

model NdaDocument {
  id            String   @id @default(cuid())
  ndaType       NdaType  @default(MUTUAL)
  ndaVersion    String   @unique
  enMarkdown    String
  summaryPl     String?
  summaryDe     String?
  summaryNl     String?
  enHashSha256  String   @db.Char(64)
  isActive      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([ndaType, isActive])
}

model NdaAcceptance {
  id                String     @id @default(cuid())
  orgId             String
  counterpartyOrgId String?
  ndaType           NdaType    @default(MUTUAL)
  ndaVersion        String
  enHashSha256      String     @db.Char(64)
  acceptedByUserId  String
  acceptedAt        DateTime
  language          String
  channel           NdaChannel
  typedName         String
  typedRole         String
  createdAt         DateTime   @default(now())

  org Organization @relation(fields: [orgId], references: [id])
  acceptedByUser User @relation("NdaAcceptanceByUser", fields: [acceptedByUserId], references: [id])

  @@unique([orgId, counterpartyOrgId, ndaType, ndaVersion, enHashSha256])
  @@index([acceptedByUserId, acceptedAt])
  @@index([orgId, ndaType, ndaVersion, enHashSha256])
}

model Intent {
  id                   String               @id @default(cuid())
  intentNumber         Int                  @unique @default(autoincrement())
  intentName           String
  orgId                String
  createdByUserId      String
  ownerUserId          String?
  goal                 String
  title                String?
  client               String?
  language             String               @default("EN")
  tech                 String[]             @default([])
  industry             String[]             @default([])
  region               String[]             @default([])
  budgetBucket         ProviderBudgetBucket @default(UNKNOWN)
  context              String?
  scope                String?
  kpi                  String?
  risks                String?
  deadlineAt           DateTime?
  stage                IntentStage          @default(NEW)
  confidentialityLevel ConfidentialityLevel @default(L1)
  source               IntentSource         @default(manual)
  sourceTextRaw         String?
  sourceTextSha256      String?              @db.Char(64)
  sourceTextLength      Int?
  aiAllowL2             Boolean             @default(false)
  aiAllowL2SetAt         DateTime?
  aiAllowL2SetByUserId   String?
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  lastActivityAt       DateTime             @default(now())

  org            Organization @relation(fields: [orgId], references: [id])
  createdByUser  User         @relation("IntentCreatedBy", fields: [createdByUserId], references: [id])
  owner          User?        @relation("IntentOwner", fields: [ownerUserId], references: [id])
  aiAllowL2SetByUser User?     @relation("IntentAiAllowL2SetBy", fields: [aiAllowL2SetByUserId], references: [id])
  shareLinks     IntentShareLink[]
  coachRuns      IntentCoachRun[]
  avatarSuggestions AvatarSuggestion[]
  avatarSuggestionFeedbacks AvatarSuggestionFeedback[]
  orgLeadQualifications OrgLeadQualification[]
  matchLists     MatchList[]
  matchFeedbacks MatchFeedback[]
  recipients IntentRecipient[]

  @@index([orgId])
  @@index([orgId, stage])
  @@index([orgId, lastActivityAt])
  @@index([orgId, ownerUserId])
  @@index([orgId, language])
  @@index([orgId, stage, lastActivityAt])
  @@index([createdByUserId])
  @@unique([orgId, intentName])
}

model IntentRecipient {
  id                   String                @id @default(cuid())
  intentId             String
  recipientOrgId       String
  senderOrgId          String
  recipientRole        IntentRecipientRole   @default(Y)
  status               IntentRecipientStatus @default(SENT)
  ndaRequestedAt       DateTime?
  ndaRequestedByOrgId  String?
  ndaRequestedByUserId String?
  createdAt            DateTime              @default(now())

  intent         Intent       @relation(fields: [intentId], references: [id])
  recipientOrg   Organization @relation("IntentRecipientRecipientOrg", fields: [recipientOrgId], references: [id])
  senderOrg      Organization @relation("IntentRecipientSenderOrg", fields: [senderOrgId], references: [id])
  ndaRequestedBy User?        @relation("IntentRecipientNdaRequestedBy", fields: [ndaRequestedByUserId], references: [id])

  @@unique([intentId, recipientOrgId])
  @@index([recipientOrgId, createdAt])
  @@index([intentId, createdAt])
  @@index([senderOrgId, createdAt])
}

model MatchList {
  id               String   @id @default(cuid())
  orgId            String
  intentId         String
  algorithmVersion String
  createdByUserId  String?
  resultsJson      Json
  createdAt        DateTime @default(now())

  org            Organization @relation(fields: [orgId], references: [id])
  intent         Intent       @relation(fields: [intentId], references: [id])
  createdByUser  User?        @relation("MatchListCreatedBy", fields: [createdByUserId], references: [id])
  feedback       MatchFeedback[]

  @@index([orgId, intentId, createdAt])
  @@index([orgId, createdAt])
}

model MatchFeedback {
  id              String               @id @default(cuid())
  orgId           String
  intentId        String
  matchListId     String
  candidateOrgId  String
  actorUserId     String?
  action          MatchFeedbackAction
  rating          MatchFeedbackRating
  notes           String?
  createdAt       DateTime             @default(now())

  org           Organization @relation(fields: [orgId], references: [id])
  intent        Intent       @relation(fields: [intentId], references: [id])
  matchList     MatchList    @relation(fields: [matchListId], references: [id])
  candidateOrg  Organization @relation("MatchFeedbackCandidateOrg", fields: [candidateOrgId], references: [id])
  actorUser     User?        @relation("MatchFeedbackActor", fields: [actorUserId], references: [id])

  @@index([orgId, intentId, createdAt])
  @@index([orgId, matchListId])
  @@index([candidateOrgId, createdAt])
}

model IntentShareLink {
  id              String   @id @default(cuid())
  orgId           String
  intentId        String
  createdByUserId String
  tokenHashSha256 String   @db.Char(64)
  createdAt       DateTime @default(now())
  expiresAt       DateTime
  revokedAt       DateTime?
  revokedByUserId String?
  lastAccessAt    DateTime?
  accessCount     Int      @default(0)

  org      Organization @relation(fields: [orgId], references: [id])
  intent   Intent       @relation(fields: [intentId], references: [id])
  createdBy User        @relation("ShareLinkCreatedBy", fields: [createdByUserId], references: [id])
  revokedBy User?       @relation("ShareLinkRevokedBy", fields: [revokedByUserId], references: [id])

  @@index([orgId, intentId])
  @@unique([tokenHashSha256])
  @@index([expiresAt])
  @@index([revokedAt])
}

model ThemePalette {
  id              String   @id @default(cuid())
  slug            String   @unique
  name            String
  tokensJson      Json
  isGlobalDefault Boolean  @default(false)
  createdByUserId String?
  updatedByUserId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  revisions       ThemePaletteRevision[]
}

model ThemePaletteRevision {
  id              String   @id @default(cuid())
  paletteId       String
  revision        Int
  tokensJson      Json
  createdByUserId String?
  createdAt       DateTime @default(now())

  palette ThemePalette @relation(fields: [paletteId], references: [id])

  @@unique([paletteId, revision])
  @@index([paletteId, createdAt])
}

model UserOnboardingState {
  id             String   @id @default(cuid())
  orgId          String
  userId         String
  version        String
  currentStep    String?
  completedSteps Json?
  startedAt      DateTime @default(now())
  completedAt    DateTime?
  updatedAt      DateTime @updatedAt

  org  Organization @relation(fields: [orgId], references: [id])
  user User         @relation(fields: [userId], references: [id])

  @@unique([orgId, userId, version])
  @@index([orgId, userId])
}

model OrgAvatarProfile {
  id              String   @id @default(cuid())
  orgId           String   @unique
  profileVersion  String
  markets         Json?
  industries      Json?
  clientTypes     Json?
  servicePortfolio Json?
  techStack       Json?
  excludedSectors Json?
  constraints     Json?
  createdByUserId String?
  updatedByUserId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  org       Organization @relation(fields: [orgId], references: [id])
  createdBy User?        @relation("OrgAvatarProfileCreatedBy", fields: [createdByUserId], references: [id])
  updatedBy User?        @relation("OrgAvatarProfileUpdatedBy", fields: [updatedByUserId], references: [id])
}

model OrgLeadQualification {
  id              String       @id @default(cuid())
  orgId           String
  intentId        String
  fitBand         LeadFitBand
  priority        LeadPriority
  reasons         Json?
  createdByUserId String?
  updatedByUserId String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  org       Organization @relation(fields: [orgId], references: [id])
  intent    Intent       @relation(fields: [intentId], references: [id])
  createdBy User?        @relation("OrgLeadQualificationCreatedBy", fields: [createdByUserId], references: [id])
  updatedBy User?        @relation("OrgLeadQualificationUpdatedBy", fields: [updatedByUserId], references: [id])

  @@unique([orgId, intentId])
  @@index([orgId, fitBand])
  @@index([orgId, priority])
}
